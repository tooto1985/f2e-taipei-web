<%for(var i=0;i<data.length;i++){var time=new Date(data[i].date);%>
<div class="col-md-12">
	<h2>場次#<%=(i+1)%></h2>
	<blockquote>
		<p><%=time.getFullYear()%>/<%=time.getMonth()+1%>/<%=time.getDate()%> <%=time.getHours()%>:<%=time.getMinutes()<10?"0"+time.getMinutes():time.getMinutes()%></p> 
		<small>
			<table data-id="<%=data[i]._id%>">
				<tr>
					<td>內容</td>
				</tr>
				<tr>
					<td class="note"><%-data[i].note.replace(/\n/g,"<br>")%></td>
				</tr>
				<%if(data[i].max){%>
				<tr>
					<td>人數上限<%=data[i].max%>人</td>
				</tr>
				<%}%>
				<tr class="list">
					<td>主持人</td>
				</tr>
				<tr class="list host">
					<td>
						<%for(var j=0;j<data[i].host.length;j++){%>
						<div data-fbid="<%=data[i].host[j]%>"></div>
						<%}%>
					</td>
				</tr>				
				<tr class="list">
					<td>參與者</td>
				</tr>
				<tr class="list user">
					<td>
						<%for(var j=0;j<data[i].user.length;j++){%>
						<div data-fbid="<%=data[i].user[j]%>"></div>
						<%}%>
					</td>
				</tr>
				<%if(!isHistory){%>
				<tr>
					<td>
						<button type="button" class="btn btn-primary btn-default btn-login"<%if(data[i].max && data[i].user.length>=data[i].max){%> data-over="true"<%}%>>
							請先登入
						</button>
					</td>
				</tr>
				<%}%>
			</table>
		</small>
	</blockquote>
</div>
<%}%>
